{
	"apiVersion": "extensions/v1beta1",
	"kind": "Deployment",
	"metadata": {
		"name": "SERVICENAME-deploy"
	},
	"spec": {
		"replicas": 3,
		"minReadySeconds": 10,
		"strategy": {
			"type": "RollingUpdate",
			"rollingUpdate": {
				"maxUnavailable": 1,
				"maxSurge": 1
			}
		},
		"template": {
			"metadata": {
				"labels": {
					"app": "SERVICENAME",
					"zone": "testing",
					"version": "v1"
				}
			},
			"spec": {
				"containers": [
					{
						"name": "SERVICENAME",
						"image": "hmallah/SERVICENAME:latest",
						"ports": [
						{
						  "hostPort": 80,
						  "containerPort": 5000
						}
						]
					}
				],
				"imagePullSecrets": [
					{
					"name": "my-secret"
					}
		    ]
			}
		}
	}
}
